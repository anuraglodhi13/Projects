<a href="/teacher/viewall" class="btn btn-info" style="margin-top:5px;">Back</a>
<h4>Editing Form for Student :<%= (user.name) %> </h4>
<form method="post" class="addStu" action="/teacher/edit/<%=user.rollno%>">
    <div class="mb-3">
      <label for="name" class="form-label">Name : </label>
      <input type="text" name="name" required class="form-control" value="<%=user.name%>" id="name">
    </div>
    <div class="mb-3">
        <label for="rollno" class="form-label">Roll No. : </label>
        <input type="number" name="rollno" value="<%=user.rollno%>" required class="form-control" id="rollno" readonly>
      </div>     
     
      <div class="mb-3">
        <label for="dob" class="form-label">Date of Birth : </label>
        <input type="date" name="dob" value="<%=user.dob%>" required class="form-control" id="dob">
      </div>
      <div class="mb-3">
        <label for="score" class="form-label">Score : </label>
        <input type="number" name="score" value="<%=user.score%>" required class="form-control" id="score">
      </div>
    <button type="submit" class="btn btn-success">Update</button>
</form>
